{#=====================================================
  Things list page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - All Things

{% endblock %}


{% block content %}

    <h1>Equipment...</h1>


    <article>

        <ul>
            {% for tool in tools %}

                <li>
                        {{ tool.name }}
                    
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


    <article>

        <h3>Add a New Piece Of Equipment...</h3>

        <form action="/add" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Name of new peice"
                required
            >

        <h3>Todays date...</h3>

            <input
                type="date"
                name="date"
                min="0"
                placeholder="Date checked"
                required
            >

        <h3>Date last checked...</h3>

            <input
                type="date"
                name="last check"
                min="0"
                placeholder="Date last checked"
                required
            >
            
            <button>Add the Equipment</button>

        </form>

    </article>

{% endblock %}

